{
    "manifest_version" : 3,
    "name": "Info Script Extension" ,
    "description": "Extension Chrome avec Spring boot",
    "version" : "1.0",
    "permissions": [
        "declarativeNetRequest",
        "notifications",
        "activeTab",
        "scripting"  
    ],

    "action": {
        "default_icon": "img/alarm-clock.png"
    },
    "icons" : {
        "128" : "img/alarm-clock.png"
    }, 
    "background": {
        "service_worker": "background.js"
    }

}